
@{
    ViewBag.Title = "CreateRemedialAction";
}
<head>
    <script src="@Url.Content("~/Scripts/jquery-1.9.1.min.js")"></script>
    <link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/Style.css")" rel="stylesheet" />

</head>
<table>
    <tr>
        <td>
            <h1 style="color:#255694; font-size:x-large; font-weight:bold; ">Add Contact</h1>
        </td>
    </tr>
    <tr>
        <td>
            <div>
                @using (@Html.BeginForm("CreateRemedialAction", "RemedialAction", FormMethod.Get))
                {
                    <table class="table">
                        <tr>
                            <td>Enter Name of Remedial Action:</td>
                            <td>@Html.TextBox("RemedialActionName", null, new {@class = "form-control", @required = "required"})</td>

                        </tr>
                        <tr>
                            <td colspan="2" align="right">
                                <input id="submit" type="submit" value="Add" class="btn btn-primary" style="padding-left:20px;" />
                                <button class="btn btn-info" onclick="history.go(-1)">Cancel</button>
                            </td>
                        </tr>
                    </table>
                }
            </div>
        </td>
    </tr>
</table>