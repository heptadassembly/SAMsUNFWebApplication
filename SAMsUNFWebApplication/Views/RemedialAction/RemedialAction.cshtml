<div>
    @if (Request.Params["error"] == "invalidfile")
    {
        <div class="bg-danger">The modifications for remedial action did not work due to a system error.  Please try again.</div>

    }
    @if (Request.Params["error"] == "fileloaded")
    {
        <div class="bg-success">The remedial action was modified successfully.</div>

    }
</div>
<table class="table" style="width:0%">
    <tr>
        <td align="left" valign="bottom">
            <div style="float: left;">
                <h3 class="viewname-h3">Remedial Action</h3>
            </div>
        </td>

    </tr>
    <tr>
        <td align="center" style="padding-left:0px;">
            <div style="width:500px; text-align:left;">
                @Html.ActionLink("Add Remedial Action", "CreateRemedialAction", "Home", null, new { @class = "btn btn-info" })
            </div>
            <div style="width:500px; text-align:center;">


                @Html.Grid(Model).Columns(columns =>
           {
           columns.Add()
           .Encoded(false)
           .Sanitized(false)
           .SetWidth(30)
           .RenderValueAs(d =>
        @<b>
            @Html.ActionLink("Edit", "EditRemedialAction", "EditRemedialAction",
               new
               {
                   @id = d.remedial_action_id
               },
               new
               {
                   @class = "btn btn-default"
               })
        </b>);
               columns.Add(c => c.name).Titled("Name").SetWidth(15).Css("admin-grid-col");
           }).WithPaging(10).Sortable(true).Filterable(true)
            </div>
        </td>
    </tr>
</table>

