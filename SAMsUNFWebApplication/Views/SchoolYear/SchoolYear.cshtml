<div>
    @if (Request.Params["error"] == "invalidfile")
    {
        <div class="bg-danger">The modifications for school year did not work due to a system error.  Please try again.</div>

    }
    @if (Request.Params["error"] == "fileloaded")
    {
        <div class="bg-success">The school year was modified successfully.</div>

    }
</div>
<table class="table" style="width:0%">
    <tr>
        <td align="left" valign="bottom">
            <div style="float: left;">
                <h3 class="viewname-h3">School Year</h3>
            </div>
        </td>


    </tr>
    <tr>
        <td>
            <div>
                @using (Html.BeginForm("SetSchoolYear", "SchoolYear", FormMethod.Get))
                {
                    //TxtFirstName, string TxtLastName, string TxtSchool, string TxtGrade, string TxtGender, string TxtHomeroom
                    <table class="table">
                        <tbody>
                            <tr>
                                <td>
                                    @Html.Label("Select School Year:")
                                </td>
                                <td>

                                    @Html.DropDownListFor(m => m.allSchoolYears,
                                        new SelectList(Model.allSchoolYears,
                                   "school_year_id", "school_year_id",
                                   Model.allSchoolYears.First().school_year_id),
                                        new
                                        {
                                            @class = "form-control"
                                        })
                                </td>
                            </tr>
                            <tr>
                                <td colspan="2" align="right">
                                    <input id="submit" class="btn btn-primary" type="submit" value="Add" style="padding-left:20px;" />
                                    <button class="btn btn-info" onclick="history.go(-1)">Cancel</button>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                }

            </div>

        </td>
    </tr>
</table>
